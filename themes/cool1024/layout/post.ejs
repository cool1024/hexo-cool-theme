<!DOCTYPE html>
<html lang="zh_cn">

<head>
    <%- partial('_partial/head') %>
</head>

<body class="bg-white">
    <div
        style="height:300px;background-image: url(/image/cover.jpg);background-size: cover ;background-position: center;">
        <div class="w-100 h-100 header">
            <div class="pt-5 text-white container">
                <div class="pt-5 mt-5"></div>
                <h3 class="m-0 pr-3" style="font-family:Microsoft YaHei">
                    <%- page.title %>
                </h3>
                <div class="d-flex align-items-center mt-5 mb-4" style="font-size: 18px;font-family: ms;">
                    <img src="<%- theme.cool_up.avatar %>" width="40" height="40"
                        class="rounded-circle bg-white pointer shadow-sm mr-3" style="padding:2px;">
                    <span class="iconfont icon-calendar mr-2"></span>
                    <span class="text-light mr-2">
                        <%- date(page.date, 'YYYY/MM/DD HH:ss') %>
                    </span>
                    <span class="iconfont icon-discount mr-2"></span>
                    <% page.categories.forEach(function(categorie){ %>
                    <a href="<%- categorie.path %>" class="mr-2 text-light">
                        <%- categorie.name %>
                    </a>
                    <% }); %>
                    <% page.tags.forEach(function(tag){ %>
                    <a href="<%- tag.path %>" class="badge-light mr-2">
                        <%- tag.name %>
                    </a>
                    <% }); %>
                </div>
                <!-- <hr class="border-light"><br> -->
            </div>
        </div>
    </div>
    <div class="container mx-auto row">
        <div class="col-12 col-lg-8 col-sm-12" style="min-height: calc(80vh - 370px)">
            <div class="aritcle">
                <!--
                    <div class="pt-5">
                        <h3 class="m-0 pr-3 text-main" style="font-family:Microsoft YaHei">
                            <%- page.title %>
                        </h3>
                        <div class="d-flex align-items-center mt-5 mb-4" style="font-size: 18px;font-family: ms;">
                            <span class="iconfont icon-discount mr-2"></span>
                            <% page.categories.forEach(function(categorie){ %>
                            <a href="<%- categorie.path %>" class="mr-2 text-muted">
                                <%- categorie.name %>
                            </a>
                            <% }); %>
                            <span class="iconfont icon-calendar mr-2"></span>
                            <span class="text-muted mr-2">
                                <%- date(page.date, 'YYYY/MM/DD HH:ss') %>
                            </span>
                            <%- partial('_view/tag', {tags:page.tags}) %>
                        </div>
                    </div>
                -->
                <div class="article-content">
                    <div style="font-size: 16px;font-family:Microsoft YaHei;font-weight: 300">
                        <%- page.more %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4 col-sm-12">
            <div class="page-index mt-5">
                <div class="overlay py-1">
                    <%- toc(page.content) %>
                </div>
            </div>
        </div>
    </div>
    <%- partial('_partial/footer') %>
</body>

</html>