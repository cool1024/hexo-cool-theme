        <div class="d-none">
            <% site.categories.each(function(categorie, i){ %>
            <div class="card">
                <div class="card-header">
                    <%- categorie.name %>
                    (<%- categorie.posts.length %>)
                </div>
                <div class="card-body">
                    <% categorie.posts.slice(0, 10).each(function(p, i){ %>
                    <a href="<%- url_for(p.path) %>">
                        <%- p.title %>
                        <%- date(p.updated, 'YYYY/MM/DD HH:ss') %>
                    </a><br>
                    <% }) %>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <%- partial('_partial/footer') %>
</body>

</html>