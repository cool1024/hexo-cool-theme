<!DOCTYPE html>
<html lang="zh_cn">

<head>
    <%- partial('_partial/head') %>
    <link rel="stylesheet" href="/style/archives.css">
</head>

<body class="bg-white">
    <div style="background-image: url(/image/cover.jpg);background-size: cover ;background-position: center;">
        <div class="w-100 h-100 header">
            <div class="pt-5 text-white container">
                <div style="height: 200px;"></div>
                <div class="d-flex flex-wrap align-items-end">
                    <div class="flex-grow-1 flex-shrink-0">
                        <h1 class="mb-5" style="font-family:Microsoft YaHei">Archives</h1>
                        <div class="mb-4">
                            <% site.categories.each(function(categorie){ %>
                            <a href="<%- url_for(categorie.path) %>" class="tagcloud tagcloud-light mr-2">
                                <!-- <span class="iconfont icon-discount mr-1"></span> -->
                                <%- categorie.name %>
                                (<%- categorie.posts.length %>)
                            </a>
                            <% }); %>
                        </div>
                    </div>
                    <div class="flex-shrink-0">
                        <nav class="p-3 nav d-flex align-items-center">
                            <h3 class="m-0 pr-3" style="font-family: ms">
                                <% theme.cool_nav.forEach(function(item){ %>
                                <a class="white" href="<%- item.action %>"><%- item.title %>&nbsp;</a>
                                <% }); %>
                            </h3>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mx-auto row">
        <section id="cd-timeline" class="cd-container">
            <% var groups = archives(site.posts) %>
            <% groups.forEach(function(group){ %>
            <div class="cd-timeline-block">
                <div class="cd-timeline-img cd-picture">
                    <img src="/image/time-line/icon.svg" alt="Picture">
                </div>

                <div class="cd-timeline-content">
                    <% group.posts.forEach(function(p){ %>
                    <p>
                        <a class="text-muted" href="<%- url_for(p.path) %>">
                            <%- p.title %>
                            <%- date(p.date, 'YYYY/MM/DD HH:ss') %>
                        </a>
                    </p>
                    <%}) %>
                    <h2 class="cd-date">
                        <%- group.year %>&nbsp;
                        （共<%- group.posts.length %>篇）
                    </h2>
                </div>
            </div>
            <%}) %>
            <div class="pager m-4">
                <%- paginator({total: page.total, current:page.current }) %>
            </div>
        </section>
        <div class="d-none">
            <% site.categories.each(function(categorie, i){ %>
            <div class="card">
                <div class="card-header">
                    <%- categorie.name %>
                    (<%- categorie.posts.length %>)
                </div>
                <div class="card-body">
                    <% categorie.posts.slice(0, 10).each(function(p, i){ %>
                    <a href="<%- url_for(p.path) %>">
                        <%- p.title %>
                        <%- date(p.updated, 'YYYY/MM/DD HH:ss') %>
                    </a><br>
                    <% }) %>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <%- partial('_partial/footer') %>
</body>

</html>