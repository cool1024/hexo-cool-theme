<div class="card m-2">
    <div class="card-body pb-0">
        <div class="row">
            <div class="col-12 col-lg-5 col-md-6 mb-4">
                <div>
                    <div class="px-3 position-absolute w-100 h-100" style="top:0;left:0;">
                        <%- image_hold(post.thumb)  %>
                    </div>
                    <img class="invisible w-100" src="<%- post.thumb %>" alt="thumb">
                </div>
            </div>
            <div class="col-12 col-lg-7 col-md-6 mb-4 d-flex flex-column">
                <h6 class="text-muted d-flex justify-content-between">
                    <div>
                        <span class="iconfont icon-discount"></span>
                        <% post.categories.forEach(function(categorie){ %>
                        <a href="<%- categorie.path %>" class="mr-2 text-muted">
                            <%- categorie.name %>
                        </a>
                        <% }); %>
                        <span class="iconfont icon-calendar"></span>
                        <%- date(post.updated, 'YYYY/MM/DD HH:ss') %>
                        / Code
                        <%- post.more.length %>
                    </div>
                    <a href="<%- post.path %>" class="text-muted pointer">查看详情&gt;&gt;</a>
                </h6>
                <h4 class="mt-3 text-blue text-truncate"><%- post.title %></h4>
                <div class="article-preview flex-grow-1 d-flex flex-column justify-content-between">
                    <div style="height: 100px;overflow: hidden;"><%- post.excerpt %></div>
                </div>
                <div class="mt-3">
                    <%- partial('tag', {tags:post.tags}) %>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card-page m-2">
    <div class="d-flex align-items-center">
        <h3 class="title flex-grow-1 m-0 py-4 px-3 text-truncate"><%- post.title %></h3>
        <div class="flex-shrink-0 pr-4 subject text-muted">
            <span class="iconfont icon-discount"></span>
            <% post.categories.forEach(function(categorie){ %>
            <a href="<%- categorie.path %>" class="mr-2 text-muted">
                <%- categorie.name %>
            </a>
            <% }); %>
            <span class="iconfont icon-calendar"></span>
            <%- date(post.updated, 'YYYY/MM/DD HH:ss') %>
        </div>
    </div>
    <div class="px-4 pt-3 content"><%- post.excerpt %></div>
    <div class="px-3 pb-3 d-flex justify-content-between">
        <div>
            <%- partial('tag', {tags:post.tags}) %>
        </div>
        <a href="<%- post.path %>" class="text-muted pointer" style="font-size: 1rem;">查看详情&gt;&gt;</a>
    </div>
</div>